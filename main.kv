<Y>:
    Label:
        text: "Name erfolgreich gespeichert"
        size_hint: 0.6, 0.2
        pos_hint: {"x":0.2, "top":0.5}

<N>:
    Label:
        text: "Falscher Teamname"
        size_hint: 0.6, 0.2
        pos_hint: {"x":0.2, "top":0.5}



NavigationLayout:
    MDNavigationDrawer:

        drawer_logo: "Bier.jpg"

        NavigationDrawerSubheader:
            text: "Biermarathon"

        NavigationDrawerIconButton:
            text: "Karte"
            icon: "map"
            on_release:
                screen_manager.current = "map"
        NavigationDrawerIconButton:
            text: "Zeit"
            icon: "clock"
            on_release:
                screen_manager.current = "time"
        NavigationDrawerIconButton:
            text: "LogIn"
            icon: "login"
            on_release:
                screen_manager.current = "login"

    BoxLayout:
        orientation: 'vertical'
        MDToolbar:
            title: "Biermarathon"
            md_bg_color: app.theme_cls.primary_color
            left_action_items: [['menu', lambda x: root.toggle_nav_drawer()]]
            elevation: 8
        ScreenManager:
            id: screen_manager
            Screen:
                name: "login"

                MDTextField:
                    id: team_name
                    hint_text: "Teamname"
                    helper_text: "Maximal 20 Characters"
                    helper_text_mode: "on_focus"

                    pos_hint: {"center_x": 0.5, "center_y": 0.5}
                    icon: "android"
                    size_hint_x: 0.7
                    icon_right: "android"
                    icon_right_color:  app.theme_cls.primary_color

                MDLabel:
                    text: "Login"
                    font_size: 40
                    halign: "center"
                    pos_hint: {"center_y": 0.7}

                MDRoundFlatIconButton:
                    text: "GO!"
                    icon: "android"
                    pos_hint: {"center_x": 0.5, "y": 0.1}
                    on_release: app.weiter_btn()

            Screen:
                name: "map"
                Image:
                    source: "Koblenz.jpg"
                    pos_hint: {"center_y": 0.7}

            Screen:
                name: "time"

                MDLabel:
                    id: Start
                    pos_hint: {"x": 0.6, "center_y": 0.9}
                MDLabel:
                    id: Check1
                    pos_hint: {"x": 0.6, "center_y": 0.83}
                MDLabel:
                    id: Check2
                    pos_hint: {"x": 0.6, "center_y": 0.76}
                MDLabel:
                    id: Check3
                    pos_hint: {"x": 0.6, "center_y": 0.69}
                MDLabel:
                    id: Check4
                    pos_hint: {"x": 0.6, "center_y": 0.62}
                MDLabel:
                    id: Check5
                    pos_hint: {"x": 0.6, "center_y": 0.55}
                MDLabel:
                    id: Ziel
                    pos_hint: {"x": 0.6, "center_y": 0.48}
                MDLabel:
                    id: start
                    pos_hint: {"x": 0.1, "center_y": 0.9}
                MDLabel:
                    id: check1
                    pos_hint: {"x": 0.1, "center_y": 0.83}
                MDLabel:
                    id: check2
                    pos_hint: {"x": 0.1, "center_y": 0.76}
                MDLabel:
                    id: check3
                    pos_hint: {"x": 0.1, "center_y": 0.69}
                MDLabel:
                    id: check4
                    pos_hint: {"x": 0.1, "center_y": 0.62}
                MDLabel:
                    id: check5
                    pos_hint: {"x": 0.1, "center_y": 0.55}
                MDLabel:
                    id: ziel
                    pos_hint: {"x": 0.1, "center_y": 0.48}
                MDTextField:
                    id: input
                    hint_text: "Checkpointcode"
                    helper_text: "8-stelliger Code"
                    helper_text_mode: "on_focus"
                    max_text_length: 8
                    pos_hint: {"center_x": 0.5, "center_y": 0.25}
                    size_hint_x: 0.7
                    icon_right_color:  app.theme_cls.primary_color
                MDFloatingActionButton:
                    icon: "arrow-right"
                    theme_text_color: "Custom"
                    text_color: [1,1,1,1]
                    md_bg_color: app.theme_cls.primary_color
                    pos_hint: {"center_x": 0.5, "y": 0.04}
                    on_release: app.starttime()
